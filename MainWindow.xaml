<Window x:Class="P2_WpfAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2_WpfAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Enter comma-separated numbers:" FontWeight="Bold"/>
        <TextBox x:Name="InputTextBox" Height="30"/>

        <Button Content="Enter" Click="ProcessButton_Click" Margin="0,10,0,0" Background="Blue" Foreground="White" Width="100"/>

        <TextBlock Text="Numbers > 50:" FontWeight="Bold" Margin="0,10,0,0"/>
        <TextBox x:Name="FilteredBox"  Height="50"/>

        <TextBlock Text="Sorted Numbers:" FontWeight="Bold" Margin="0,10,0,0"/>
        <TextBox x:Name="SortedBox" Height="50"/>

        <TextBlock Text="Squared Numbers:" FontWeight="Bold" Margin="0,10,0,0"/>
        <TextBox x:Name="SquaredBox" Height="50"/>
    </StackPanel>

</Window>
